@model Aulas.Models.Alunos

@{
   ViewData["Title"] = "Novo Aluno";
}

<h1>Adicionar novo aluno</h1>

<hr />
<div class="row">
   <div class="col-md-4">
      <form asp-action="Create">
         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         <div class="form-group">
            <label asp-for="NumAluno" class="control-label"></label>
            <input asp-for="NumAluno" class="form-control" />
            <span asp-validation-for="NumAluno" class="text-danger"></span>
         </div>
         <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
         </div>

         <div class="form-group">
            <label asp-for="DataNascimento" class="control-label"></label>
            <input asp-for="DataNascimento" class="form-control" />
            <span asp-validation-for="DataNascimento" class="text-danger"></span>
         </div>
         <div class="form-group">
            <label asp-for="Telemovel" class="control-label"></label>
            <input asp-for="Telemovel" class="form-control" />
            <span asp-validation-for="Telemovel" class="text-danger"></span>
         </div>

         <div class="form-group">
            <label asp-for="CursoFK" class="control-label"></label>
            <select asp-for="CursoFK" class="form-control" asp-items="ViewBag.CursoFK"></select>
         </div>

         <div class="form-group">
            <label asp-for="DataMatricula" class="control-label"></label>
            <input asp-for="DataMatricula" class="form-control" />
            <span asp-validation-for="DataMatricula" class="text-danger"></span>
         </div>
         <div class="form-group">
             @*
                 vamos usar o atributo auxiliar
                 e não o atributo verdadeiro da Propinas
             *@
            <label asp-for="PropinasAux" class="control-label"></label>
            <input asp-for="PropinasAux" class="form-control" />
            <span asp-validation-for="PropinasAux" class="text-danger"></span>
         </div>


         <div class="form-group">
             <br />
            <input type="submit" value="Adicionar" class="btn btn-primary" />
         </div>
      </form>
   </div>
</div>

<div>
    <br />
   <a asp-action="Index">voltar para trás</a>
</div>

@section Scripts {
   @{
      await Html.RenderPartialAsync("_ValidationScriptsPartial");
   }
}
