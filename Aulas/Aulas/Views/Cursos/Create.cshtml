@model Aulas.Models.Cursos

@{
    ViewData["Title"] = "Adicionar Curso";
}

<h1>Adicionar um novo curso</h1>

<hr />
<div class="row">
    <div class="col-md-4">

        @*
            o 'form' é o objeto que transporta os nossos dados
            para o Servidor
        *@
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            @*
                NÃO ESQUECER:
                qd se pretende enviar ficheiros para o Servidor
                o FORM tem de ser formatado com enctype="multipart/form-data"
            *@
            <div asp-validation-summary="All" class="text-danger"></div>
         
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Logotipo" class="control-label"></label>
                <input type="file" 
                       name="ImagemLogo"
                       accept=".png,.jpg,.jpeg" 
                       class="form-control" />
            <span asp-validation-for="Logotipo" class="text-danger"></span>

            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <br />
    <a asp-action="Index">Regressar à listagem dos cursos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
